@page "/account"
@inherits AccountBase

<div class="row">
    <div class="col-md-3 offset-md-3">
        <div class="row">
            <h3>Register</h3>
        </div>
        <div class="row">
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <input type="password" class="form-control" />
        </div>
        <div class="row">
            <input type="password" class="form-control" />
        </div>
        <div class="row">
            <input type="button" class="btn btn-success" value="Sign In" @onclick="Authenticate" />
        </div>
    </div>

    <div class="col-md-3">
        <div class="row">
            <h3>Sign In</h3>
        </div>
        <div class="row">
            <input type="text" class="form-control" @bind="Email" />
        </div>
        <div class="row">
            <input type="password" class="form-control"  />
        </div>
        <div class="row">
            <input type="button" class="btn btn-primary" value="Sign In" @onclick="Authenticate" />
        </div>
    </div>
</div>
