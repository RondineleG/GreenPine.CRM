@inherits LayoutComponentBase

@using Blazored.Toast.Configuration
@using UintaPine.CRM.App.Services
@using UintaPine.CRM.Model.Shared.Responses

@inject AppState _appState
@inject API _api
@inject NavigationManager _navigationManager
@inject IToastService toastService
@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage


<BlazoredToasts Position="ToastPosition.TopRight"
                Timeout="4"
                SuccessClass="success-toast-override"
                SuccessIconClass="fa fa-thumbs-up"
                ErrorIconClass="fas fa-exclamation-circle" />

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <NavLink class="navbar-brand nav-link" href="/">
        <i class="fas fa-tree mr-1"></i> <span>Uinta Pine</span>
    </NavLink>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
        </ul>
        @if (_appState.IsInitialized == true)
        {
            @if (_appState?.User?.Email != null)
            {
                <div class="navbar-text">
                    <ul class="navbar-nav mr-auto">
                        @if (SelectedCompany != null)
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="@($"company/{SelectedCompany}")">
                                    Customers
                                </NavLink>
                            </li>
                        }
                        @if (Companies.Count > 1)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle pointer" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Switch Company
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var company in Companies)
                                    {
                                        <NavLink class="nav-link" href="@($"company/{company.Id}")" >
                                            @company.Name
                                        </NavLink>
                                    }
                                </div>
                            </li>
                        }
                        <li class="nav-item">
                            <NavLink class="nav-link" href="account">
                                Account | @_appState.User.Email
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="" @onclick="SignOut">
                                Sign Out <i class="fas fa-sign-out-alt"></i>
                            </NavLink>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <span class="navbar-text">
                    <NavLink class="nav-link" href="signin">
                        Register/Sign In
                    </NavLink>
                </span>
            }
        }
    </div>
</nav>

<div class="content px-4 py-3">
    @Body
</div>

@code {

    List<Company> Companies { get; set; } = new List<Company>();
    private string SelectedCompany { get; set; }

    protected override void OnInitialized()
    {
        _appState.OnChange += StateHasChanged;

        _appState.User = new User()
        {
            Id = localStorage.GetItem<string>("user")
        };
    }


    async protected override Task OnInitializedAsync()
    {

        User user = await _api.GetUserCurrent();
        if (user != null)
        {
            _appState.User = user;
            localStorage.SetItem("user", user.Id);

            Companies = await _api.GetCompaniesByUser(_appState.User.Id);

            SelectedCompany = localStorage.GetItem<string>("SelectedCompany");
            if (SelectedCompany == null && Companies.Count > 0)
                SelectedCompany = Companies.FirstOrDefault().Id;
        }
        else
        {
            localStorage.RemoveItem("user");
        }
        _appState.IsInitialized = true;
    }

    async public Task SignOut()
    {
        await _api.Logout();
        localStorage.RemoveItem("user");

        _appState.User = null;

        _navigationManager.NavigateTo("signin");
    }
}